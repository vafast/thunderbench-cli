{
  "name": "thunderbench-cli",
  "version": "1.1.0",
  "description": "ThunderBench CLI - 高性能API性能测试工具命令行界面，支持框架对比测试",
  "type": "module",
  "main": "dist/cli.js",
  "bin": {
    "thunderbench": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup src/cli.ts --outDir ./dist --format esm",
    "dev": "npx tsx watch src/cli.ts",
    "release": "npm run build && npm run test && npx bumpp && npm publish --access=public"
  },
  "keywords": [
    "cli",
    "performance",
    "benchmark",
    "api-testing",
    "wrk",
    "load-testing",
    "stress-testing"
  ],
  "author": "ThunderBench Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thunderbench/thunderbench-cli.git"
  },
  "homepage": "https://github.com/thunderbench/thunderbench-cli#readme",
  "bugs": {
    "url": "https://github.com/thunderbench/thunderbench-cli/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "thunderbench": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "bumpp": "^10.2.3",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  }
}
